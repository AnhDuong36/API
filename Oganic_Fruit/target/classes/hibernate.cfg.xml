<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
		<property name="hibernate.connection.password">123456</property>
		<property name="hibernate.connection.url">jdbc:sqlserver://localhost:1433;DatabaseName=QLNS</property>
		<property name="hibernate.connection.username">sa</property>
		<property name="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</property>
		<mapping class="entity.Account" />
		<mapping class="entity.Banner" />
		<mapping class="entity.Blog" />
		<mapping class="entity.Category" />
		<mapping class="entity.Favorite" />
		<mapping class="entity.Order" />
		<mapping class="entity.OrderDetail" />
		<mapping class="entity.Product" />
		<mapping class="entity.Rating" />
	</session-factory>
</hibernate-configuration>
